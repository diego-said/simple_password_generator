<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:drawable="@drawable/ic_select_all_green" android:state_pressed="true"/>

    <!-- focused/not selected -->
    <item android:drawable="@drawable/ic_select_all_green" android:state_focused="true" android:state_selected="false"/>

    <!-- focused/selected -->
    <item android:drawable="@drawable/ic_select_all_green" android:state_focused="true" android:state_selected="true"/>

    <!-- selected -->
    <item android:drawable="@drawable/ic_select_all_green" android:state_selected="true"/>

    <!-- disabled -->
    <item android:drawable="@drawable/ic_select_all_grey" android:state_enabled="false" />

    <!-- default -->
    <item android:drawable="@drawable/ic_select_all_white" />

</selector>